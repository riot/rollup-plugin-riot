    "rollup-pluginutils": "^1.5.0"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "co": "^4.6.0",
    "eslint": "^3.3.0",
    "fs-promise": "^0.5.0",
    "mocha": "^3.0.2",
    "rollup": "^0.34.0",
    "rollup-plugin-buble": "^0.12.1"
